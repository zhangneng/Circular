.onmyoji_item {
  display: flex;
  display: -webkit-box;
  display: -webkit-flex;
  margin-bottom: 5rpx;
  margin-top: 5rpx;
  background-color: #fff;
}

.hover_onmyoji {
  background-color: #999999;
}

.item_image {
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.item_info {
  background-color: #fff;
}

.image_box {
  width: 100%;
  height: 100%;
  vertical-align: top;
}

.item_desc {
  line-height: 1.2;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  color: #999999;
  font-size: medium;
}

